@font-face {
	font-family: 'Grandstander';
	src: url('/fonts/Grandstander/Grandstander-VariableFont_wght.ttf') format('truetype-variations');
	font-weight: 100 900;
	font-stretch: 25% 125%;
}
html, body {
	@apply bg-surface-50-900-token h-full overflow-hidden font-light md:font-medium text-black dark:text-white hide-scrollbar scrollbar-hide text-[1rem];
	@apply bg-gradient-to-tr from-purple-400 to-pink-200 dark:from-purple-950 dark:to-pink-800 ;
	outline: none;
	line-height: 2rem;
	/*@apply bg-surface-50-900-token;*/
}
.scrollbar-hide::-webkit-scrollbar {
	display: none;
}
/* For IE, Edge and Firefox */
.scrollbar-hide {
	-ms-overflow-style: none;  /* IE and Edge */
	scrollbar-width: none;  /* Firefox */
}
h3.title {
    font-size: 1.5rem;
    font-weight: 200;
    margin-bottom: 1rem;
}
p {
	margin: 1rem 0;
	font-weight: 300
}
:root {
	--theme-rounded-base: 12px;
	--theme-rounded-container: 4px;
	--theme-font-family-base: 'Grandstander', sans-serif;
    --theme-font-family-heading: 'Grandstander', sans-serif;
}
*:focus {
	outline: none
}
form input, form select, .form input, .form select {
	@apply bg-black bg-opacity-20 dark:text-white text-black;
	width: 100%;
	padding: 1rem 1.4rem;
	
	border-radius: 0.6rem;
	
	font-size: 1.1rem;
	border: 3px transparent solid;
	transition: border 0.2s ease-in;
}
form select option, .form select option {
	text-align: center;
	padding: 1rem
}
form select::after {
  content: '\25BC';
  position: absolute;
  top: 50%;
  right: 10px;
  transform: translateY(-50%);
  pointer-events: none;
}

form label, .form label {
	opacity: 0.75
}
form div button[type="submit"] {
	padding: 1rem 3rem;
	font-size: 1.2rem;
	border-radius: 6px;
}
/*form button[type="submit"]:hover {
	color:gray;
	background-color: rgba(210, 200, 190);
}*/
form div button[type="submit"]:disabled {
	/* color: darkslateblue;*/
	opacity: 0.5;
	cursor: not-allowed;
}
form div button[type="reset"] {
	padding: 1rem 3rem 1rem 0;
	font-size: 1.2rem;
	/* background-color:none;
	 color:lightsalmon*/
}
form button[type="reset"]:hover {
	/* color:lightcyan */
}
input.invalid {
	border: 3px red solid;
}

